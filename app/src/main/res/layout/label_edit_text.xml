<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">
    
    <TextView
        android:id="@+id/txtview_label_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/LumaAI.TextAppearance.BodyLarge"
        tools:text="Label*" />

    <FrameLayout
        android:id="@+id/framelayout_label_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtview_label_edit_text"
        >
        <EditText
            android:id="@+id/edttxt_label_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_edit_text_bg"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="50dp"
            android:paddingBottom="16dp"
            android:textAppearance="@style/LumaAI.TextAppearance.BodyMedium"
            app:layout_constraintTop_toBottomOf="@id/txtview_label_edit_text"
            android:duplicateParentState="true"
            tools:hint="Hint" />
        <ImageView
            android:id="@+id/imgview_label_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:src="@drawable/ic_eye"
            tools:visibility="visible" />
    </FrameLayout>

</merge>